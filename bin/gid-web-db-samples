#!/usr/bin/env python

import path
import string

from random import choice
from web.models.user import User, db
from web.models.repository import Repository

names = ["john", "alice", "bob"]
for name in names:
  user = User(name, name + "@bla.de", name)

  db.session.add(user) 

  for j in range(0,3):
    repoName = ''.join([choice(string.letters) for k in xrange(8)])
    repo = Repository(repoName, user)
    db.session.add(repo) 
    user.repositories.append(repo)
    
  db.session.commit()

  print "added user '"+name+"' with pass '"+name+"'"
